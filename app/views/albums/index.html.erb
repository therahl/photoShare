<% provide :title, 'Stories' %>
<p id="notice"><%= notice %></p>

<h1>Your Stories</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>

        <tr>
          <a href="<%= album_photos_path(album) %>">
            <% unless album.photos.empty? %>
            <%= image_tag album.photos.last.image.url(:medium), class: "img-responsive" %>
            <% end %>
          </a>
        </tr>
      <tr>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Story', new_album_path, class: "btn btn-success" %>
